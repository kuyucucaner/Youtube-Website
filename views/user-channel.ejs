<!DOCTYPE html>
<html>
  <head>
    <title>CanerTube</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="/stylesheets/user-channel.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/scroll-bar.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
 </head>
  <body>
    <%- include('../views/partials/navbar') %>
    <div class="channel-container" id="channel-container">
        <div class="channel-user-container">
            <div class="channel-user-container-left">
                <img src="<%= channel[0]?.photo %>" alt="channel-user-photo" class="channel-user-photo">
            </div>
            <div class="channel-user-container-right">
                <p class="channel-user-name"><%=channel[0]?.display_name %></p>
                <div class="channel-user-nickname-subscription">
                    <p class="channel-user-nickname"> @<%=channel[0]?.user_name %></p>
                    <p class="channel-user-subscription">-  4 Abone</p>
                </div>
                <button class="channel-user-more-button">Bu kanal hakkında daha fazla bilgi <i class="bi bi-arrow-right-short"></i></button>
                <div class="channel-user-setting-button">
                    <button class="channel-user-set-channel-button">Kanalı özelleştir</button>
                    <button class="channel-user-set-video-button">Videoları yönet</button>
                </div>
            </div>
        </div>
    </div>
    <div class="channel-button-container" id="channel-button-container">
        <button class="channel-button-home">Videolar</button>
    </div>
    <div class="channel-video-container" id="channel-video-container">
        <% if (videos && videos.length > 0) { %>
            <% videos.forEach(function(video) { %>
                <div class="channel-video-row">
                    <a href="http://localhost:3000/video-detail/<%= video.video_id %>" class="video-link-href">
                    <img src="<%= video.thumbnail_url %>" alt ="later-image" class="channel-video-image">
                    <p class="channel-video-name"> <%= video.title %></p>
                    <p class="channel-video-user-name"> <%= video.display_name %></p>
                    <div class="additional-info">
                        <p class="video-view"><%= video.view_count %></p>
                        <div class="slider-item-publish-time"><%= video.upload_date %></div>
                    </div>
                    </a>
                </div>
                <% }); %>  
        <% } else { %>
            <p class="channel-video-name">Bu liste boş</p>
        <% } %>
    </div>
    <%- include('../views/partials/sidebar') %>
    <script src='/javascripts/sidebar-user-channel-handle.js'></script>
    <script src='/javascripts/voice-input.js'></script>
    <script src='/javascripts/clear-input.js'></script>
    <script src='/javascripts/navigate-to.js'></script>
    <script src='/javascripts/google-login.js'></script>
    <script src='/javascripts/time-difference-you.js'></script>
    <script src='/javascripts/view-changer.js'></script>
    <script src='/javascripts/navbar-setting-dropdown.js'></script>
    <script src='/javascripts/navbar-profile-dropdown.js'></script>
    <script src='/javascripts/searched-videos.js'></script>
    <script src='/javascripts/navbar-setting-limited-toggle.js'></script>
    <script src='/javascripts/close-shorts.js'></script>

  </body>
</html>