                                                <img class="navbar-profile-change-current-profile-photo" src="<%= user.photos[0].value %>" alt="Profile Photo">
                                            </div>
                                            <div class="navbar-profile-change-account-body-middle">
                                                <p class="navbar-profile-change-account-name"><%= user.displayName %></p>
                                                <p class="navbar-profile-change-account-nickname">@nickname</p>
