<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <title>CanerTube</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/stylesheets/subscriptions.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/scroll-bar.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
</head>
<body>
  <%- include('../views/partials/navbar') %>
  <%- include('../views/partials/sidebar') %>

  <div class="subscriptions-video-container" id="subscriptions-video-container">
    <div class="video-header">
      <div class="video-header-left">
        <p class="video-header-title">Son yüklenenler</p>
      </div>
      <div class="video-header-right">
        <button class="video-header-manage">Yönet</button>
        <button class="video-header-table"><i class="bi bi-grid-3x2-gap-fill"></i></button>
        <button class="video-header-list"><i class="bi bi-list-task"></i></button>
      </div>
    </div>

    <div class="video-row-first">
      <% if (video && video.length > 0) { %>
        <% video.forEach(function(video) { %>
          <div class="video-box">
            <a href="http://localhost:3000/video-detail/<%= video.video_id %>" class="video-link-href">
            <img src="<%= video.thumbnail_url %>" alt="<%= video.title %>" class="video-image">
            <div class="video-content">
              <div class="video-box-left">
                <img src="<%= video.photo %>" alt="<%= video.display_name %>" class="video-channel-image">
              </div>
              <div class="video-box-right">
                <p class="video-title"><%= video.title %></p>
                <p class="video-channel-title"><%= video.display_name %></p>
                <div class="video-box-right-line">
                  <p class="video-view"><%= video.view_count %></p>
                  <p class="video-publish-time"><%= video.upload_date %></p>
                </div>
              </div>
            </div>
            </a>
          </div>
        <% }); %>
      <% } %>
    </div>
  </div>

  <script src="/javascripts/sidebar-subscription-handle.js"></script>
  <script src="/javascripts/voice-input.js"></script>
  <script src="/javascripts/clear-input.js"></script>
  <script src="/javascripts/navigate-to.js"></script>
  <script src="/javascripts/google-login.js"></script>
  <script src="/javascripts/view-changer.js"></script>
  <script src='/javascripts/searched-videos.js'></script>

  <script src="/javascripts/time-difference.js"></script>
</body>
</html>
